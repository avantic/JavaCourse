<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
 
	<bean id="helloWorldBean" class="net.avantic.course.HelloWorld">
		<property name="name" value="Yeray" />
	</bean>
	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>
	
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.hbm2ddl.auto">validate</prop>
				<prop key="hibernate.connection.charSet">utf8</prop>
			</props>
		</property>

		<property name="annotatedClasses">
			<list>
				<value>net.avantic.course.vacation.model.VacationRequest</value>
				<value>net.avantic.course.vacation.model.Employee</value>
			</list>
		</property>
	</bean>
 
 	<beans profile="testing">
 		<!-- 
 		<bean id="employeeDao" class="net.avantic.course.vacation.dao.memory.EmployeeInMemoryDAO" />
 		<bean id="vacationRequestDao" class="net.avantic.course.vacation.dao.memory.VacationRequestInMemoryDAO" />
 		 -->
 		
 		<bean id="doVacationRequestFacade" class="net.avantic.course.vacation.facade.impl.DoVacationRequestFacadeImpl" />
 	</beans>
 	
 	<beans profile="production">
 	</beans>
</beans>